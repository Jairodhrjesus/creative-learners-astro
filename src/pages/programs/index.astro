---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import infantImg from "../../assets/gallery/gallery-1.jpg";
import toddlerImg from "../../assets/gallery/gallery-3.jpg";
import preschoolImg from "../../assets/gallery/gallery-5.jpg";
import prekImg from "../../assets/gallery/gallery-7.jpg";

const programs = [
    {
        name: "Infant Program",
        age: "3 to 24 Months",
        href: "/programs/infant",
        image: infantImg,
        color: "bg-blue-50",
        text: "text-blue-600",
        border: "border-blue-100",
        description:
            "Our Infant Program provides a nurturing, home-away-from-home environment where your baby's unique needs are our top priority. We focus on sensory exploration and individualized care to support early developmental milestones.",
        features: [
            "Personalized daily schedules",
            "Sensory-rich play areas",
            "Individualized attention",
            "Safe and secure environment",
        ],
    },
    {
        name: "Toddler Program",
        age: "24 to 36 Months",
        href: "/programs/toddler",
        image: toddlerImg,
        color: "bg-orange-50",
        text: "text-orange-600",
        border: "border-orange-100",
        description:
            "Toddlers are natural explorers. Our program channels their energy into meaningful learning experiences that foster independence, social skills, and motor development through guided play.",
        features: [
            "Independence building",
            "Social skill development",
            "Fine & gross motor activities",
            "Structured daily routines",
        ],
    },
    {
        name: "Preschool Program",
        age: "3 to 4 Years",
        href: "/programs/preschool",
        image: preschoolImg,
        color: "bg-green-50",
        text: "text-green-600",
        border: "border-green-100",
        description:
            "In our Preschool program, we ignite a lifelong love for learning. Our curriculum balances structured academic work with creative play, focusing on early literacy, math, and STEAM concepts.",
        features: [
            "STEAM integration",
            "Early literacy & phonics",
            "Creative arts & expression",
            "Collaborative learning",
        ],
    },
    {
        name: "Pre-K Program",
        age: "4 to 5 Years",
        href: "/programs/pre-k",
        image: prekImg,
        color: "bg-purple-50",
        text: "text-purple-600",
        border: "border-purple-100",
        description:
            "Preparing for the transition to Kindergarten is a major milestone. Our Pre-K program ensures your child is academically, socially, and emotionally ready for the next step in their education.",
        features: [
            "Kindergarten readiness",
            "Advanced math & science",
            "Social-emotional coaching",
            "Transition support",
        ],
    },
];
---

<Layout title="Programs Overview | Creative Learners Child Care">
    <main class="bg-white overflow-hidden">
        {/* HERO SECTION */}
        <section
            class="bg-brand-card py-24 border-b border-brand-primary/5 relative"
        >
            <div class="absolute inset-0 bg-grid-slate-100/[0.5] -z-10"></div>
            <div
                class="container mx-auto px-6 relative z-10 text-center max-w-4xl"
            >
                <span
                    class="text-brand-accent font-black uppercase tracking-[0.2em] text-xs mb-4 block"
                    >Ages 3 Months â€“ 5 Years</span
                >
                <h1
                    class="text-5xl md:text-7xl font-black font-heading text-slate-950 leading-tight mb-8 tracking-tight"
                >
                    Our Educational <br />
                    <span class="text-brand-primary">Programs</span>
                </h1>
                <p class="text-xl text-slate-600 font-medium leading-relaxed">
                    At Creative Learners, we believe in providing a
                    cognitive-based program where children learn through active
                    exploration. Our curriculum is designed to grow with your
                    child, offering the perfect balance of care and academic
                    stimulation at every stage.
                </p>
            </div>
        </section>

        {/* PROGRAMS LISTING */}
        <section class="py-24">
            <div class="container mx-auto px-6">
                <div class="space-y-32">
                    {
                        programs.map((p, index) => (
                            <div
                                class={`flex flex-col lg:items-center gap-16 ${index % 2 === 1 ? "lg:flex-row-reverse" : "lg:flex-row"}`}
                            >
                                {/* Image Side */}
                                <div class="w-full lg:w-1/2 relative">
                                    <div
                                        class={`absolute inset-0 ${p.color} rounded-[3.5rem] ${index % 2 === 1 ? "-rotate-2" : "rotate-2"} -z-10 transition-transform duration-500`}
                                    />
                                    <div class="overflow-hidden rounded-[3rem] border-4 border-white shadow-2xl relative group">
                                        <Image
                                            src={p.image}
                                            alt={p.name}
                                            class="w-full aspect-[4/3] object-cover scale-105 group-hover:scale-100 transition-transform duration-1000"
                                        />
                                        <div class="absolute inset-0 bg-black/10 opacity-0 group-hover:opacity-100 transition-opacity" />
                                    </div>
                                    {/* Floating Badge */}
                                    <div
                                        class={`absolute -bottom-6 ${index % 2 === 1 ? "-left-6" : "-right-6"} bg-white p-6 rounded-3xl shadow-xl border border-slate-100 hidden md:block animate-soft-reveal`}
                                    >
                                        <p
                                            class={`text-sm font-black ${p.text} uppercase tracking-widest`}
                                        >
                                            {p.age}
                                        </p>
                                    </div>
                                </div>

                                {/* Content Side */}
                                <div class="w-full lg:w-1/2 space-y-8">
                                    <div class="space-y-4">
                                        <h2 class="text-4xl md:text-5xl font-black font-heading text-slate-950 tracking-tight">
                                            {p.name}
                                        </h2>
                                        <div class="h-1.5 w-20 bg-brand-accent rounded-full" />
                                    </div>
                                    <p class="text-xl text-slate-600 leading-relaxed font-medium">
                                        {p.description}
                                    </p>
                                    <div class="grid sm:grid-cols-2 gap-4">
                                        {p.features.map((feature) => (
                                            <div class="flex items-center gap-3">
                                                <div
                                                    class={`w-6 h-6 rounded-full ${p.color} ${p.text} flex items-center justify-center flex-shrink-0`}
                                                >
                                                    <svg
                                                        class="w-3.5 h-3.5"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="4"
                                                            d="M5 13l4 4L19 7"
                                                        />
                                                    </svg>
                                                </div>
                                                <span class="font-bold text-slate-700">
                                                    {feature}
                                                </span>
                                            </div>
                                        ))}
                                    </div>
                                    <a
                                        href={p.href}
                                        class={`inline-flex items-center gap-3 px-8 py-4 ${p.color} ${p.text} rounded-full font-black hover:brightness-95 transition-all shadow-lg shadow-black/5 group`}
                                    >
                                        Learn More About {p.name.split(" ")[0]}
                                        <svg
                                            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2.5"
                                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                                            />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        {/* CTA SECTION */}
        <section class="py-24 bg-brand-primary relative overflow-hidden">
            <div class="absolute inset-0 opacity-10">
                <div
                    class="absolute top-10 left-10 w-64 h-64 bg-white rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute bottom-10 right-10 w-96 h-96 bg-brand-accent rounded-full blur-3xl"
                >
                </div>
            </div>

            <div class="container mx-auto px-6 relative z-10 text-center">
                <h2
                    class="text-4xl md:text-6xl font-black font-heading text-white mb-8 tracking-tight"
                >
                    See Our Programs In Action
                </h2>
                <p
                    class="text-2xl text-white/80 font-medium mb-12 max-w-2xl mx-auto"
                >
                    The best way to experience Creative Learners is to visit us.
                    Schedule your personal tour today.
                </p>
                <div class="flex flex-wrap justify-center gap-6">
                    <a
                        href="/contact"
                        class="bg-white text-brand-primary px-10 py-5 rounded-full font-black text-xl hover:bg-brand-card transition-all shadow-2xl"
                    >
                        Schedule a Tour
                    </a>
                    <a
                        href="tel:9252499000"
                        class="bg-brand-accent text-white px-10 py-5 rounded-full font-black text-xl hover:brightness-110 transition-all shadow-2xl"
                    >
                        Call: 925-249-9000
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    @keyframes soft-reveal {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-soft-reveal {
        animation: soft-reveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
</style>
