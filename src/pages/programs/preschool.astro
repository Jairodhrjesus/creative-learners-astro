---
import Layout from "../../layouts/Layout.astro";
import ContactForm from "../../components/ContactForm.astro";
import { Image } from "astro:assets";
import img1 from "../../assets/gallery/gallery-5.jpg";
import img2 from "../../assets/gallery/gallery-6.jpg";
import img3 from "../../assets/hero-images/hero-2.webp";
---

<Layout title="Preschool Program | Creative Learners Child Care">
    <main class="bg-white">
        {/* Page Header */}
        <section
            class="bg-brand-card py-20 border-b border-brand-primary/5 relative overflow-hidden"
        >
            <div class="absolute inset-0 bg-grid-slate-100/[0.5] -z-10"></div>
            <div class="container mx-auto px-6 relative z-10">
                <div class="max-w-3xl">
                    <span
                        class="text-brand-accent font-black uppercase tracking-[0.2em] text-xs mb-4 block"
                        >3 to 4 Years</span
                    >
                    <h1
                        class="text-5xl md:text-7xl font-black font-heading text-slate-950 leading-[0.95] mb-6 tracking-tight"
                    >
                        Preschool <span class="text-brand-primary">Program</span
                        >
                    </h1>
                    <p class="text-2xl text-slate-700 font-bold leading-tight">
                        Nurturing Early Learning Through Exploration and Growth
                    </p>
                </div>
            </div>
        </section>

        {/* Content Section */}
        <section class="py-20">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-12 gap-16 lg:gap-24 items-start">
                    {/* Main Content Column */}
                    <div class="lg:col-span-7 space-y-12">
                        <div
                            class="space-y-6 text-xl text-slate-600 leading-relaxed font-medium"
                        >
                            <p
                                class="text-2xl text-slate-900 font-bold leading-relaxed"
                            >
                                At Creative Learners, our preschool program
                                fosters curiosity and a love for learning. We
                                provide a rich environment where children can
                                explore language, math, science, and the arts.
                            </p>

                            <div class="h-px w-full bg-slate-100 my-10"></div>

                            <div class="space-y-4">
                                <h2
                                    class="text-3xl font-black font-heading text-slate-950"
                                >
                                    Preschool Program at Creative Learners
                                </h2>
                                <p>
                                    At Creative Learners, we believe children
                                    learn best in environments that foster
                                    exploration. Our preschool program offers a
                                    diverse range of learning centers designed
                                    to support each child’s overall development,
                                    including activities in language, math,
                                    science, dramatic play, music, and creative
                                    arts. These activities balance teacher-led
                                    instruction with child-guided discovery.
                                </p>
                            </div>

                            {/* Featured Image Frame */}
                            <div class="relative group my-16">
                                <div
                                    class="absolute inset-0 bg-brand-primary rounded-[2.5rem] rotate-1 group-hover:rotate-0 transition-transform duration-500 -z-10"
                                >
                                </div>
                                <div
                                    class="overflow-hidden rounded-[2.5rem] border-4 border-white shadow-2xl"
                                >
                                    <Image
                                        src={img1}
                                        alt="Preschool activities at Creative Learners"
                                        class="w-full h-auto scale-105 group-hover:scale-100 transition-transform duration-1000"
                                    />
                                </div>
                            </div>

                            <div class="space-y-4">
                                <h2
                                    class="text-3xl font-black font-heading text-slate-950"
                                >
                                    Age-Appropriate Learning and Support
                                </h2>
                                <p>
                                    We provide each child with the perfect mix
                                    of age-appropriate challenges, support,
                                    sensitivity, and stimulation. At Creative
                                    Learners Child Care, we work closely with
                                    families to create a program that nurtures
                                    each child’s growth, helping them reach
                                    their fullest potential during these crucial
                                    early years.
                                </p>
                            </div>

                            {/* Second Featured Image */}
                            <div class="relative group my-16">
                                <div
                                    class="absolute inset-0 bg-brand-accent rounded-[2.5rem] -rotate-1 group-hover:rotate-0 transition-transform duration-500 -z-10"
                                >
                                </div>
                                <div
                                    class="overflow-hidden rounded-[2.5rem] border-4 border-white shadow-2xl"
                                >
                                    <Image
                                        src={img2}
                                        alt="Preschool classroom activities"
                                        class="w-full h-auto scale-105 group-hover:scale-100 transition-transform duration-1000"
                                    />
                                </div>
                            </div>

                            <div
                                class="bg-brand-card p-10 rounded-[2.5rem] border border-brand-primary/10 space-y-4"
                            >
                                <h2
                                    class="text-3xl font-black font-heading text-slate-950"
                                >
                                    Continuous Growth and Development
                                </h2>
                                <p class="text-slate-800">
                                    Our preschool program is continually
                                    evolving, introducing new ideas, materials,
                                    and activities to inspire lifelong learning
                                    and promote healthy development in early
                                    childhood.
                                </p>
                            </div>
                        </div>
                    </div>

                    {/* Sidebar Column (Sticky) */}
                    <aside class="lg:col-span-5 sticky top-32">
                        <ContactForm />

                        <div
                            class="mt-8 p-8 bg-slate-50 rounded-[2rem] border border-slate-100"
                        >
                            <h4
                                class="text-lg font-black text-slate-950 mb-6 uppercase tracking-wider text-center"
                            >
                                Preschool Facts
                            </h4>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-center gap-3 font-bold text-slate-600"
                                >
                                    <div
                                        class="w-6 h-6 rounded-full bg-brand-primary/10 text-brand-primary flex items-center justify-center"
                                    >
                                        ✓
                                    </div>
                                    Balance of Teacher/Child Discovery
                                </li>
                                <li
                                    class="flex items-center gap-3 font-bold text-slate-600"
                                >
                                    <div
                                        class="w-6 h-6 rounded-full bg-brand-primary/10 text-brand-primary flex items-center justify-center"
                                    >
                                        ✓
                                    </div>
                                    Comprehensive STEAM Curriculum
                                </li>
                                <li
                                    class="flex items-center gap-3 font-bold text-slate-600"
                                >
                                    <div
                                        class="w-6 h-6 rounded-full bg-brand-primary/10 text-brand-primary flex items-center justify-center"
                                    >
                                        ✓
                                    </div>
                                    Lifelong Learning Foundation
                                </li>
                                <li
                                    class="flex items-center gap-3 font-bold text-slate-600"
                                >
                                    <div
                                        class="w-6 h-6 rounded-full bg-brand-primary/10 text-brand-primary flex items-center justify-center"
                                    >
                                        ✓
                                    </div>
                                    Parent-Teacher Collaboration
                                </li>
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </section>
    </main>
</Layout>
