---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Contact Us | Creative Learners Child Care">
    <main class="bg-white">
        {/* Header Section */}
        <section
            class="bg-brand-card py-20 border-b border-brand-primary/5 relative overflow-hidden"
        >
            <div class="absolute inset-0 bg-grid-slate-100/[0.5] -z-10"></div>
            <div class="container mx-auto px-6 relative z-10 text-center">
                <span
                    class="text-brand-accent font-black uppercase tracking-[0.2em] text-xs mb-4 block"
                    >Get in Touch</span
                >
                <h1
                    class="text-5xl md:text-7xl font-black font-heading text-slate-950 leading-[0.95] mb-6 tracking-tight"
                >
                    Contact <span class="text-brand-primary">Us</span>
                </h1>
                <p class="text-xl text-slate-600 font-medium max-w-2xl mx-auto">
                    We're here to answer your questions and welcome you into our
                    family. Visit us or reach out to schedule a private tour.
                </p>
            </div>
        </section>

        {/* Contact Info & Form Section */}
        <section class="py-24">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-12 gap-16 lg:gap-24 items-start">
                    {/* Info Side */}
                    <div class="lg:col-span-5 space-y-12">
                        <div class="space-y-10">
                            {/* Contact Detail 1 */}
                            <div class="flex gap-6 group">
                                <div
                                    class="w-14 h-14 bg-brand-card text-brand-primary rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-brand-primary group-hover:text-white transition-all shadow-sm"
                                >
                                    <svg
                                        class="w-7 h-7"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-black text-slate-950 mb-2"
                                    >
                                        Our Location
                                    </h3>
                                    <p
                                        class="text-slate-600 font-medium leading-relaxed"
                                    >
                                        Pleasanton, CA 94566<br />
                                        <span class="text-sm opacity-70 italic"
                                            >(Contact us for the exact facility
                                            address)</span
                                        >
                                    </p>
                                </div>
                            </div>

                            {/* Contact Detail 2 */}
                            <div class="flex gap-6 group">
                                <div
                                    class="w-14 h-14 bg-brand-card text-brand-primary rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-brand-primary group-hover:text-white transition-all shadow-sm"
                                >
                                    <svg
                                        class="w-7 h-7"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-black text-slate-950 mb-2"
                                    >
                                        Call Us
                                    </h3>
                                    <a
                                        href="tel:9254259500"
                                        class="text-brand-primary text-2xl font-black hover:underline tracking-tight"
                                    >
                                        (925) 425-9500
                                    </a>
                                    <p
                                        class="text-slate-500 text-sm font-medium mt-1"
                                    >
                                        Available Mon-Fri, 7am - 6pm
                                    </p>
                                </div>
                            </div>

                            {/* Contact Detail 3 */}
                            <div class="flex gap-6 group">
                                <div
                                    class="w-14 h-14 bg-brand-card text-brand-primary rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-brand-primary group-hover:text-white transition-all shadow-sm"
                                >
                                    <svg
                                        class="w-7 h-7"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-black text-slate-950 mb-2"
                                    >
                                        Business Hours
                                    </h3>
                                    <div
                                        class="space-y-1 text-slate-600 font-medium"
                                    >
                                        <div class="flex justify-between gap-4">
                                            <span>Monday – Friday:</span>
                                            <span
                                                class="text-slate-900 font-bold"
                                                >7:00 AM – 6:00 PM</span
                                            >
                                        </div>
                                        <div class="flex justify-between gap-4">
                                            <span>Saturday – Sunday:</span>
                                            <span
                                                class="text-slate-400 font-bold"
                                                >Closed</span
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* Social Link Reminder */}
                        <div
                            class="bg-slate-50 p-8 rounded-[2rem] border border-slate-100"
                        >
                            <p
                                class="text-slate-500 font-medium italic text-center"
                            >
                                "Follow our daily adventures and community
                                updates on our social media channels."
                            </p>
                        </div>
                    </div>

                    {/* Form Side */}
                    <div class="lg:col-span-7">
                        <ContactForm />
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
