---
const reviews = [
    {
        name: "Celine C.",
        location: "Oakland, CA",
        stars: 5,
        text: "My daughter has been attending Creative Learners for over a year now and we couldn't be happier. The teachers are incredible and genuinely care about the children's development.",
        date: "2 months ago",
    },
    {
        name: "Jessica L.",
        location: "Pleasanton, CA",
        stars: 5,
        text: "The facility is always clean, safe, and filled with creative activities. I love that they focus on performing arts and confidence building. Highly recommended!",
        date: "5 months ago",
    },
    {
        name: "David M.",
        location: "San Ramon, CA",
        stars: 5,
        text: "A truly home-away-from-home environment. Our son has grown so much socially and academically since starting his Pre-K program here.",
        date: "1 year ago",
    },
];
---

<section class="py-24 bg-brand-card/30">
    <div class="container mx-auto px-6">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6"
        >
            <div class="max-w-2xl">
                <h2
                    class="text-4xl md:text-5xl font-black font-heading text-slate-950 mb-4 leading-tight"
                >
                    Heartfelt Reviews from <span class="text-brand-primary"
                        >Our Families</span
                    >
                </h2>
                <p class="text-lg text-slate-600 font-medium">
                    See why parents in Pleasanton trust us with their children's
                    early education.
                </p>
            </div>

            <a
                href="https://www.yelp.com/biz/creative-learners-child-care-pleasanton"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 bg-white border border-slate-200 px-6 py-3 rounded-2xl hover:shadow-lg transition-all group"
            >
                <span class="font-bold text-slate-900 leading-none"
                    >View us on</span
                >
                <img
                    src="https://upload.wikimedia.org/wikipedia/commons/a/ad/Yelp_Logo.svg"
                    alt="Yelp"
                    class="h-6 w-auto group-hover:scale-110 transition-transform"
                />
            </a>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {
                reviews.map((review) => (
                    <div class="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100 flex flex-col justify-between hover:shadow-xl hover:-translate-y-2 transition-all">
                        <div>
                            <div class="flex gap-1 mb-6 text-brand-accent">
                                {[...Array(review.stars)].map(() => (
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-5 w-5 fill-current"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                ))}
                            </div>

                            <p class="text-slate-600 italic leading-relaxed mb-8">
                                "{review.text}"
                            </p>
                        </div>

                        <div class="flex items-center gap-4 border-t border-slate-100 pt-6">
                            <div class="w-12 h-12 bg-brand-primary/10 rounded-full flex items-center justify-center font-bold text-brand-primary text-xl">
                                {review.name[0]}
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-950 leading-none">
                                    {review.name}
                                </h4>
                                <p class="text-xs text-slate-400 font-bold uppercase mt-1 tracking-wider">
                                    {review.location}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
