---
const images = [
    {
        src: "/src/assets/hero-images/playground.jpg",
        alt: "Creative Learners Playground",
    },
    // Agregaremos más aquí cuando el usuario las suba
];
---

<div
    class="relative w-full overflow-hidden rounded-[2.5rem] shadow-2xl group border-4 border-white aspect-[4/3] md:aspect-square lg:aspect-[4/5]"
>
    <div
        class="flex transition-transform duration-500 ease-out h-full"
        id="carousel-track"
    >
        {
            images.map((img) => (
                <div class="min-w-full h-full relative">
                    <img
                        src={img.src}
                        alt={img.alt}
                        class="w-full h-full object-cover"
                    />
                </div>
            ))
        }
    </div>

    {/* Overlays for depth */}
    <div
        class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent pointer-events-none"
    >
    </div>

    {
        /* Navigation Dots (Simple for now since there's only one we know of, but ready for more) */
    }
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2 z-10">
        <div class="w-3 h-3 rounded-full bg-white shadow-lg"></div>
        <div class="w-3 h-3 rounded-full bg-white/40 shadow-lg"></div>
        <div class="w-3 h-3 rounded-full bg-white/40 shadow-lg"></div>
    </div>
</div>
