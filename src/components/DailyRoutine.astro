---
import { Image } from "astro:assets";
// Use some of the gallery images for this section
import img1 from "../assets/gallery/gallery-2.jpg";
import img2 from "../assets/gallery/gallery-5.jpg";
import img3 from "../assets/gallery/gallery-6.jpg";

const routineSteps = [
    {
        title: "Morning Welcome & Circle Time",
        time: "9:00 AM",
        desc: "We start our day with stories, music, dance, and engaging discussions to set a positive tone.",
        icon: "M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z",
        color: "bg-amber-100",
        iconColor: "text-amber-600"
    },
    {
        title: "Hands-on Activities",
        time: "10:00 AM",
        desc: "Children engage in arts, cognitive sciences, and manipulative toys, developing fine motor skills.",
        icon: "M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z",
        color: "bg-blue-100",
        iconColor: "text-blue-600"
    },
    {
        title: "Outdoor Exploration",
        time: "11:00 AM",
        desc: "Active play outside including climbing, wheel toys, and safe space to run and socialize.",
        icon: "M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "bg-green-100",
        iconColor: "text-green-600"
    },
    {
        title: "Social Lunch & Rest",
        time: "12:00 PM",
        desc: "A relaxed, unstructured social experience with peers and teachers, followed by quiet rest time.",
        icon: "M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "bg-purple-100",
        iconColor: "text-purple-600"
    },
    {
        title: "Performing Arts & Free Play",
        time: "2:00 PM",
        desc: "Our specialty: dramatics, building, and games to raise children's confidence and independence.",
        icon: "M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "bg-rose-100",
        iconColor: "text-rose-600"
    }
];
---

<section class="py-24 bg-slate-50 relative overflow-hidden border-t border-slate-100">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 bg-grid-slate-100/[0.5] -z-10"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-brand-primary/5 rounded-full blur-3xl -z-10"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-accent/5 rounded-full blur-3xl -z-10"></div>

    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span class="text-brand-accent font-black uppercase tracking-[0.2em] text-xs">A Structured Yet Flexible Routine</span>
            <h2 class="text-4xl md:text-5xl font-black font-heading text-slate-950 mt-4 mb-6 leading-tight tracking-tight">
                A Typical Day at <br />
                <span class="text-brand-primary">Creative Learners</span>
            </h2>
            <p class="text-lg text-slate-600 font-medium leading-relaxed">
                While every day brings new discoveries, our predictable routine provides the security children need to feel confident, explore freely, and learn joyfully in our small, individualized classes.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
            
            <!-- Left Side: Interactive Timeline -->
            <div class="space-y-8 relative before:absolute before:inset-0 before:ml-6 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-slate-200 before:to-transparent">
                {routineSteps.map((step, index) => (
                    <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group is-active">
                        <!-- Icon -->
                        <div class={`flex items-center justify-center w-12 h-12 rounded-full border-4 border-slate-50 ${step.color} ${step.iconColor} shadow-xl shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 z-10 transition-transform group-hover:scale-110`}>
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d={step.icon} />
                            </svg>
                        </div>
                        
                        <!-- Content Card -->
                        <div class="w-[calc(100%-4rem)] md:w-[calc(50%-3rem)] bg-white p-6 rounded-3xl shadow-lg border border-slate-100 group-hover:-translate-y-1 transition-transform">
                            <div class="flex items-center gap-3 mb-2">
                                <span class={`text-xs font-black px-2.5 py-1 rounded-md bg-slate-100 ${step.iconColor}`}>{step.time}</span>
                            </div>
                            <h3 class="font-bold text-lg text-slate-900 mb-2">{step.title}</h3>
                            <p class="text-sm text-slate-500 font-medium leading-relaxed">{step.desc}</p>
                        </div>
                    </div>
                ))}
            </div>

            <!-- Right Side: Image Collage -->
            <div class="relative h-[600px] w-full hidden lg:block">
                <!-- Image 1 -->
                <div class="absolute top-0 right-0 w-3/4 h-3/5 rounded-[2.5rem] overflow-hidden border-8 border-white shadow-2xl z-20 hover:z-30 transition-transform hover:scale-105 duration-500 origin-top-right">
                    <Image src={img1} alt="Circle time at preschool" class="w-full h-full object-cover" />
                </div>
                <!-- Image 2 -->
                <div class="absolute bottom-10 left-0 w-3/5 h-2/5 rounded-[2.5rem] overflow-hidden border-8 border-white shadow-2xl z-10 hover:z-30 transition-transform hover:scale-105 duration-500 origin-bottom-left">
                    <Image src={img2} alt="Hands-on learning" class="w-full h-full object-cover" />
                </div>
                <!-- Image 3 -->
                <div class="absolute -bottom-10 right-10 w-2/5 h-2/5 rounded-full overflow-hidden border-8 border-white shadow-xl z-20 hover:z-30 transition-transform hover:scale-105 duration-500">
                    <Image src={img3} alt="Outdoor play" class="w-full h-full object-cover" />
                </div>
                <!-- Decorative Badge -->
                <div class="absolute top-1/2 left-1/4 -translate-y-1/2 -translate-x-1/2 z-30 bg-brand-primary text-white p-6 rounded-full shadow-2xl animate-[spin_10s_linear_infinite] hover:[animation-play-state:paused] cursor-default border-4 border-white">
                    <div class="text-center font-black leading-none">
                        <span class="block text-2xl">Play</span>
                        <span class="block text-sm opacity-80">& Learn</span>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</section>
