---
import { Image } from "astro:assets";
import logo from "../assets/logo.webp";

const { pathname } = Astro.url;
const currentYear = new Date().getFullYear();

const programs = [
    {
        name: "Infant Program",
        href: "/programs/infant",
        description:
            "Nurturing care and sensory play for babies 6 weeks to 18 months.",
        icon: "M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4",
    },
    {
        name: "Toddler Program",
        href: "/programs/toddler",
        description:
            "Developing independence and social skills for ages 18 months to 3 years.",
        icon: "M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    },
    {
        name: "Preschool Program",
        href: "/programs/preschool",
        description:
            "Fostering curiosity and early literacy for children 3 to 4 years old.",
        icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
    },
    {
        name: "Pre-kindergarten",
        href: "/programs/pre-k",
        description:
            "A comprehensive bridge to Kindergarten for ages 4 to 5 years.",
        icon: "M13 10V3L4 14h7v7l9-11h-7z",
    },
];
---

<header class="bg-white border-b border-gray-100 sticky top-0 z-50">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-24 items-center">
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="/" class="flex items-center">
                    <Image
                        src={logo}
                        alt="Creative Learners Logo"
                        class="h-14 w-auto"
                    />
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden lg:flex items-center space-x-10">
                <!-- Mega Menu Trigger -->
                <div class="group h-24 flex items-center">
                    <button
                        class="flex items-center text-slate-600 group-hover:text-brand-primary font-semibold transition-colors cursor-pointer py-1 px-3 rounded-xl group-hover:bg-slate-50"
                    >
                        Programs
                        <svg
                            class="ml-1.5 w-4 h-4 transition-transform group-hover:rotate-180"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2.5"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <!-- Mega Menu Panel (100vw) -->
                    <div
                        class="absolute top-[96px] left-0 w-full bg-white shadow-2xl border-t border-slate-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform -translate-y-2 group-hover:translate-y-0 z-40"
                    >
                        <div class="max-w-7xl mx-auto flex">
                            <!-- Left Side: Context -->
                            <div
                                class="w-1/3 p-12 bg-slate-50 border-r border-slate-100"
                            >
                                <h2
                                    class="text-3xl font-black text-slate-900 mb-4 font-heading leading-tight"
                                >
                                    Educational <br />
                                    <span class="text-brand-primary"
                                        >Excellence</span
                                    >
                                </h2>
                                <p
                                    class="text-slate-500 mb-8 max-w-xs leading-relaxed"
                                >
                                    Discover our specialized programs designed
                                    to nurture potential at every developmental
                                    stage.
                                </p>
                                <a
                                    href="/contact"
                                    class="inline-flex items-center text-brand-primary font-bold hover:gap-2 transition-all"
                                >
                                    See all programs overview
                                    <svg
                                        class="w-5 h-5 ml-1"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </a>
                            </div>

                            <!-- Right Side: Program Links Grid -->
                            <div
                                class="w-2/3 p-12 grid grid-cols-2 gap-x-8 gap-y-10"
                            >
                                {
                                    programs.map((program) => (
                                        <a
                                            href={program.href}
                                            class="group/item flex items-start gap-4 p-4 -m-4 rounded-2xl hover:bg-brand-card transition-all border border-transparent hover:border-slate-100"
                                        >
                                            <div class="w-12 h-12 flex-shrink-0 bg-brand-card text-brand-primary rounded-xl flex items-center justify-center group-hover/item:bg-brand-primary group-hover/item:text-white transition-all">
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="1.5"
                                                        d={program.icon}
                                                    />
                                                </svg>
                                            </div>
                                            <div>
                                                <h3 class="text-lg font-bold text-slate-900 group-hover/item:text-brand-primary transition-colors">
                                                    {program.name}
                                                </h3>
                                                <p class="text-sm text-slate-500 mt-1 leading-snug">
                                                    {program.description}
                                                </p>
                                            </div>
                                        </a>
                                    ))
                                }
                            </div>
                        </div>
                        <!-- Bottom Bar -->
                        <div
                            class="bg-gray-50 p-6 border-t border-slate-100 italic text-center"
                        >
                            <p class="text-slate-500 font-medium italic">
                                <span
                                    class="text-brand-primary font-black not-italic mr-2"
                                    >⭐ Enrollment Open!</span
                                >
                                Secure your child's spot for the {currentYear} academic
                                year.
                                <a
                                    href="/contact"
                                    class="text-brand-primary font-bold hover:underline ml-2 italic"
                                    >Schedule a tour today →</a
                                >
                            </p>
                        </div>
                    </div>
                </div>

                <a
                    href="/blog"
                    class="text-slate-600 hover:text-brand-primary font-semibold transition-colors"
                    >Blog</a
                >

                <a
                    href="/contact"
                    class="bg-brand-primary text-white px-8 py-3 rounded-full font-bold hover:bg-brand-dark transition-all shadow-lg hover:shadow-brand-primary/20 active:scale-95"
                >
                    Contact Us
                </a>
            </div>

            {/* Mobile CTA and Toggle */}
            <div class="flex lg:hidden items-center gap-3">
                <a
                    href="/contact"
                    class="bg-brand-primary text-white text-xs font-black uppercase tracking-wider px-4 py-2.5 rounded-lg shadow-md shadow-brand-primary/20"
                >
                    Contact
                </a>
                <button
                    id="menu-toggle"
                    class="p-2 text-slate-600 focus:outline-none bg-slate-100 rounded-lg"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </nav>
</header>
