---
import { Image } from "astro:assets";
import logo from "../assets/logo.webp";

const currentYear = new Date().getFullYear();

const socialLinks = [
    {
        name: "Facebook",
        url: "https://www.facebook.com/p/Creative-Learners-Child-Care-100069956208096/",
        icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>`,
    },
    {
        name: "Yelp",
        url: "https://www.yelp.com/biz/creative-learners-child-care-pleasanton",
        icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12.2 16.2c-.3 0-.6-.1-.8-.3l-3.2-3.2c-.4-.4-.4-1.1 0-1.5s1.1-.4 1.5 0l2.5 2.5V3c0-.6.4-1 1-1s1 .4 1 1v10.7l2.5-2.5c.4-.4 1.1-.4 1.5 0s.4 1.1 0 1.5l-3.2 3.2c-.3.2-.6.3-.8.3zM4.5 19h15c.6 0 1 .4 1 1s-.4 1-1 1h-15c-.6 0-1-.4-1-1s.4-1 1-1z"/></svg>`,
    },
];

const footerLinks = [
    {
        title: "Programs",
        links: [
            { name: "Infant Program", href: "/programs/infant" },
            { name: "Toddler Program", href: "/programs/toddler" },
            { name: "Preschool Program", href: "/programs/preschool" },
            { name: "Pre-kindergarten", href: "/programs/pre-k" },
        ],
    },
    {
        title: "Company",
        links: [
            { name: "Contact Us", href: "/contact" },
            { name: "Blog", href: "/blog" },
        ],
    },
];
---

<footer class="bg-slate-950 text-white py-20 overflow-hidden relative">
    {/* Decorative background blobs */}
    <div
        class="absolute -top-24 -left-24 w-96 h-96 bg-brand-primary/10 rounded-full blur-3xl opacity-50"
    >
    </div>
    <div
        class="absolute -bottom-24 -right-24 w-96 h-96 bg-brand-accent/5 rounded-full blur-3xl opacity-30"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-16 lg:gap-8 mb-20"
        >
            {/* Brand Column */}
            <div class="lg:col-span-2 space-y-8">
                <a href="/" class="block w-fit">
                    <Image
                        src={logo}
                        alt="Creative Learners Logo"
                        class="h-16 w-auto brightness-0 invert"
                    />
                </a>
                <p class="text-slate-400 text-lg leading-relaxed max-w-sm">
                    Providing exceptional early care and educational support for
                    infants through Pre-kindergarten in Pleasanton, CA.
                </p>
                <div class="flex gap-4">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-12 h-12 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center hover:bg-brand-primary hover:border-brand-primary transition-all group"
                                aria-label={social.name}
                            >
                                <div
                                    class="text-white group-hover:scale-110 transition-transform"
                                    set:html={social.icon}
                                />
                            </a>
                        ))
                    }
                </div>
            </div>

            {/* Links Columns */}
            {
                footerLinks.map((column) => (
                    <div class="space-y-6">
                        <h4 class="text-lg font-black tracking-tight">
                            {column.title}
                        </h4>
                        <ul class="space-y-4">
                            {column.links.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-slate-400 hover:text-brand-primary font-medium transition-colors"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>

        {/* Bottom Bar */}
        <div
            class="pt-10 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-slate-500 font-bold uppercase tracking-widest"
        >
            <p>
                Â© {currentYear} Creative Learners Child Care. All rights reserved.
            </p>
        </div>
    </div>
</footer>
